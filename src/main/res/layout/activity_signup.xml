<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/rtyuu"
    tools:context=".Signup">


    <LinearLayout
        android:orientation="vertical"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_centerInParent="true"

        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <com.rengwuxian.materialedittext.MaterialEditText

            android:hint="@string/phone"

            android:id="@+id/edtphone"
            android:textColorHint="@android:color/holo_orange_light"

            android:text=""
            android:textSize="24sp"
            android:inputType="text"

            app:met_baseColor="@color/white"
            app:met_floatingLabel="highlight"
            app:met_floatingLabelAlwaysShown="false"
            app:met_floatingLabelTextColor="@color/white"
            app:met_floatingLabelTextSize="18sp"
            app:met_maxCharacters="11"
            app:met_singleLineEllipsis="true"
            app:met_textColor="@color/white"


            android:layout_width="match_parent"
            android:layout_height="wrap_content"



            />

        <com.rengwuxian.materialedittext.MaterialEditText

            android:hint="@string/name"

            android:id="@+id/edtname"
            android:textColorHint="@android:color/holo_orange_light"

            android:text="Tom"
            android:textSize="24sp"
            android:inputType="text"

            app:met_baseColor="@color/white"
            app:met_floatingLabel="highlight"
            app:met_floatingLabelAlwaysShown="false"
            app:met_floatingLabelTextColor="@color/white"
            app:met_floatingLabelTextSize="18sp"

            app:met_singleLineEllipsis="true"
            app:met_textColor="@color/white"


            android:layout_width="match_parent"
            android:layout_height="wrap_content"



            />

        <com.rengwuxian.materialedittext.MaterialEditText

            android:hint="@string/password"
            android:id="@+id/edtpassword"
            android:textColorHint="@android:color/holo_blue_dark"
            android:text="123"
            app:met_floatingLabelTextColor="@color/white"
            app:met_floatingLabelTextSize="18sp"
            android:textSize="24sp"
            android:textColorHighlight="@color/white"
            android:defaultFocusHighlightEnabled="true"
            android:inputType="textPassword"
            app:met_baseColor="@color/white"
            app:met_floatingLabel="highlight"
            app:met_textColor="@color/white"

            app:met_singleLineEllipsis="true"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"



            />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:weightSum="2"
        android:layout_centerInParent="true"

        >

        <Button
            android:id="@+id/Btn_signup"
            android:text="Sign Up"
            android:textColor="@android:color/background_light"
            android:layout_weight="1"
            android:textAllCaps="false"
            android:layout_width="0dp"
            android:layout_margin="6dp"
            android:layout_height="wrap_content"
            android:background="@color/darkyellow"
            android:shadowColor="@android:color/black"


            android:padding="@dimen/default_padding_top"


            />
    </LinearLayout>




</RelativeLayout>